<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".zonsection.zongcatagory">

    <ImageButton
        android:id="@+id/jazzbannertop"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginBottom="0dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/zongbanner" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/jazzbannertop"
        android:gravity="center"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/zonghybrid"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/jazzroundbg"

            android:scaleType="fitXY"
            android:src="@drawable/zongcallhybridoffer"
            android:text="call hybrid" />

        <ImageButton
            android:id="@+id/zongsms"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/jazzroundbg"
            android:scaleType="fitXY"
            android:src="@drawable/zongsmsoffer"
            android:text="sms offer" />

        <ImageButton
            android:id="@+id/zonginternet"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/jazzroundbg"
            android:scaleType="fitXY"

            android:src="@drawable/zonginernetoffer"
            android:text="inernet offer" />

        <ImageButton
            android:id="@+id/zonglboffer"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/jazzroundbg"
            android:scaleType="fitXY"
            android:src="@drawable/zonglocaionbaseoffer"
            android:text="Loation Based Offers" />

        <ImageButton
            android:id="@+id/zongotheroffer"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/jazzroundbg"
            android:scaleType="fitXY"
            android:src="@drawable/zongotheroffer"
            android:text="Otheroffers"

            />

    </LinearLayout>
</RelativeLayout>