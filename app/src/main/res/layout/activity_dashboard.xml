<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:background="#89060B">
    <ImageButton
        android:id="@+id/dashboardbanner"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY"
android:background="#00000000"
        android:src="@drawable/dashboardbanner" />
<LinearLayout
    android:layout_below="@+id/dashboardbanner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/jazz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:src="@drawable/jazzsim"
            android:scaleType="fitXY"
            android:text="jazz"
            android:background="#FFFFFF"/>

        <ImageButton
            android:id="@+id/warid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:src="@drawable/waridsim"
            android:scaleType="fitXY"
            android:text="warid"
            android:background="#FFFFFF"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <ImageButton
            android:id="@+id/ufone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:text="ufone"
            android:src="@drawable/ufonesim"
            android:scaleType="fitXY"
            android:background="#FFFFFF"/>

        <ImageButton
            android:id="@+id/telenor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:text="telenor"
            android:src="@drawable/telnorsim"
            android:scaleType="fitXY"
            android:background="#FFFFFF"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/zong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            android:src="@drawable/zongsim"
            android:text="zong" />

        <ImageButton
            android:id="@+id/ptcl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:text="ptcl"
            android:src="@drawable/ptclsim"
            android:scaleType="fitXY"
            android:background="#FFFFFF"/>


    </LinearLayout>
</LinearLayout>

</RelativeLayout>